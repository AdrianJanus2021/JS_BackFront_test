<head>
    <style>
        img {
            width: 400px;

        }
        table{
            border-collapse: collapse;
            text-align: center;
        }
    </style>
</head>
<body>
<h1>
    Product List
</h1>

<form id="form" action="/addProduct" method="post">
    <label >Product id:
    <input type="text" id="productId" name="productId" required>
    </label>

    <label >Name:
        <input type="text" id="productName" name="productName" required>
    </label>

    <label >Price:
        <input type="number" step=0.01 id="price" name="price" required>
    </label>

    <label >Category id:
        <input type="text" id="categoryId" name="categoryId" required>
    </label>

    <button type="submit" id="insert_product" >Insert</button>
    <br/><br/>

</form>

<form id="form" action="/addCategory" method="post">
    <label >Category id:
        <input type="text" id="categoryId" name="categoryId" required>
    </label>

    <label >Name:
        <input type="text" id="categoryName" name="categoryName" required>
    </label>

    <button type="submit" >Insert</button>
    <br/><br/>
</form>

<table rules="cols" id="table">
    <tr>
        <th>Product Id</th>
        <th>Product Name</th>
        <th>Price</th>
        <th>Category Id</th>
        <th>Category Name</th>
    </tr>
    <% data.forEach(row=> { %>
        <tr>
            <td><%= row.productId %></td>
            <td><%= row.productName %></td>
            <td><%= row.price %></td>
            <td><%= row.categoryId %></td>
            <td><%= row.categoryName %></td>
        </tr>
    <% });%>
</table>
</br></br>

<h1>Add Random Number to the list</h1>
<form id="form" action="/randomNumber" method="post">
    <button id="random">Add Random</button>
</form>

<ul id="list">
</ul>

<script src="https://code.jquery.com/jquery-3.1.1.js" integrity="sha256-16cdPddA6VdVInumRGo6IbivbERE8p7CQR3HzTBuELA=" crossorigin="anonymous"></script>
<script>
    $("#random").click(function(event) {
        event.preventDefault()
        $.ajax({
            url:"/randomNumber",
            type:"POST",
            data: {randN:"randN"},
            dataType: "JSON",
            success: function(data){
                var list= document.getElementById("list")
                var entry=document.createElement("li")
                entry.appendChild(document.createTextNode(data.randN))
                list.appendChild(entry)
            }
        })
    })
</script>

</body>